<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <!--loading beans through component scan-->
    <context:component-scan base-package="com.hashort.spring.basics"/>

    <!--defining and autowiring beans-->
    <bean id="xmlJdbcConnection"
          class="com.hashort.spring.basics.springbasics.xml.XMLJdbcConnection">
        <!-- collaborators and configuration for this bean go here -->
    </bean>

    <bean id="xmlPersonDao" class="com.hashort.spring.basics.springbasics.xml.XMLPersonDao">
        <property name="XMLJdbcConnection" ref="xmlJdbcConnection"/>
        <!-- collaborators and configuration for this bean go here -->
    </bean>

    <!-- more bean definitions go here -->

</beans>